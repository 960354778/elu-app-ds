<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="@color/bg_primary"
        android:layout_margin="10dp"
        android:id="@+id/LLLoginTab"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/tvLoginTab"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="登录"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:textColor="@android:color/white"
            android:padding="10dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/MyDoctorListTab"
        android:background="@color/bg_primary"
        android:layout_width="160dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="我的医生工单"
        android:layout_below="@+id/LLLoginTab"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/MyHosListTab"
        android:background="@color/bg_primary"
        android:layout_width="160dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="我的医院工单"
        android:layout_below="@+id/LLLoginTab"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/tvDoctersTab"
        android:background="@color/bg_primary"
        android:layout_width="160dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="医生工单"
        android:layout_below="@+id/MyDoctorListTab"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_height="90dp" />
    <TextView
        android:id="@+id/tvhosTab"
        android:background="@color/bg_primary"
        android:layout_width="160dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="医院工单"
        android:layout_below="@+id/MyHosListTab"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_height="90dp" />

</RelativeLayout>
