<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayoutId"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/space_medium">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_medium"
        android:layout_marginLeft="@dimen/space_medium"
        android:layout_marginRight="@dimen/space_medium"
        card_view:cardBackgroundColor="@color/bg_gray"
        card_view:cardCornerRadius="@dimen/space_xsmall"
        card_view:cardElevation="@dimen/elevation_medium"
        card_view:contentPadding="@dimen/space_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/ivCallId"
                android:src="@mipmap/ic_call"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_xxxlarge"
                android:layout_marginLeft="@dimen/space_medium"
                android:layout_centerVertical="true"
                />


            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ivCallId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_medium">

                <TextView
                    android:id="@+id/tv1Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv2Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv3Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv4Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3Id"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv5Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv6Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv7Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_medium"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/tv8Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_000000"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>